<!-- from: national number -->
<extension name="cleanup-caller-id" continue="true">
  <condition field="caller_id_number" expression="^1([2-9][0-9]{9})$">
    <action application="set" data="caller_id_number=$1"/>
    <action application="transfer" data="to-${destination_number}"/>
  </condition>
</extension>

<!-- from: international number -->
<extension name="cleanup-caller-id" continue="true">
  <condition field="caller_id_number" expression="^([2-9][0-9]{9})$">
    <action application="set" data="caller_id_number=011$1"/>
    <action application="transfer" data="to-${destination_number}"/>
  </condition>
</extension>

<!-- to: US number -->
<extension name="cleanup-called-1" continue="true">
  <condition field="destination_number" expression="^to-(1[2-9]*)$">
    <action application="transfer" data="call-$1"/>
  </condition>
</extension>

<!-- to: non-US number -->
<extension name="cleanup-called-2" continue="true">
  <condition field="destination_number" expression="^to-([2-9][0-9]*)$">
    <action application="transfer" data="call-$1"/>
  </condition>
</extension>
