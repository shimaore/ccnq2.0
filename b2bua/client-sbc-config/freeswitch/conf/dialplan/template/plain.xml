<?xml version="1.0" encoding="utf-8"?>
<include>
  <!-- egress  -->
  <context name="egress-$${profile_name}">

    <extension name="unloop">
      <condition field="${unroll_loops}" expression="^true$"/>
      <condition field="${sip_looped_call}" expression="^true$">
        <action application="deflect" data="${destination_number}"/>
      </condition>
    </extension>

    <extension name="default-egress">
      <condition field="destination_number" expression="^(.*)$">
        <action application="set" data="direction=egress"/>
        <action application="set" data="bypass_media=true"/>
        <action application="set" data="progress_timeout=12"/>
        <!-- billing data -->
        <action application="set" data="ccnq_from_e164=${caller_id_number}"/>
        <action application="set" data="ccnq_to_e164=${destination_number}"/>
        <action application="set" data="ccnq_account=${sip_h_ccnq_account}"/>
        <action application="set" data="ccnq_account_sub=${sip_h_ccnq_account_sub}"/>
        <!-- /billing data -->
        <action application="bridge" data="sofia/sbc-$${profile_name}/$1@$${egress_target}"/>
      </condition>
    </extension>

  </context>

  <!-- ingress  -->
  <context name="ingress-$${profile_name}">

    <extension name="unloop">
      <condition field="${unroll_loops}" expression="^true$"/>
      <condition field="${sip_looped_call}" expression="^true$">
        <action application="deflect" data="${destination_number}"/>
      </condition>
    </extension>

    <extension name="default-ingress">
      <condition field="destination_number" expression="^(.*)$">
        <action application="set" data="direction=ingress"/>
        <action application="set" data="bypass_media=true"/>
        <action application="set" data="progress_timeout=12"/>
        <!-- billing data -->
        <action application="set" data="ccnq_from_e164=${caller_id_number}"/>
        <action application="set" data="ccnq_to_e164=${destination_number}"/>
        <action application="set" data="ccnq_account=${sip_h_ccnq_account}"/>
        <action application="set" data="ccnq_account_sub=${sip_h_ccnq_account_sub}"/>
        <!-- /billing data -->
        <action application="bridge" data="sofia/internal-$${profile_name}/$1@$${ingress_target}"/>
      </condition>
    </extension>

  </context>
</include>
