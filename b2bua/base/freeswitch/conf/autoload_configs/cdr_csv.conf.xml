<configuration name="cdr_csv.conf" description="CDR CSV Format">
  <settings>
    <!-- 'cdr-csv' will always be appended to log-base -->
    <param name="log-base" value="/var/log/freeswitch"/>
    <param name="default-template" value="ccnq"/>
    <!-- This is like the info app but after the call is hung up -->
    <param name="debug" value="false"/>
    <param name="rotate-on-hup" value="true"/>
    <!-- may be a b or ab -->
    <param name="legs" value="ab"/>
  </settings>
  <templates>
    <!-- &#009; is TAB -->
    <!-- start, account, account_sub, from_e164, to_e164, count, duration, direction (ingress|egress) ... are used by the billing system  -->
    <!-- call_direction (inbound|outbound), call_uuid, call_other_uuid, call_id are used by the monitoring / troubleshooting systems (esp. to match inbound calls with outbound calls) -->
    <template name="ccnq">start=${start_stamp}&#009;account=${ccnq_account}&#009;account_sub=${ccnq_account_sub}&#009;from_e164=${ccnq_from_e164}&#009;to_e164=${ccnq_to_e164}&#009;count=1&#009;duration=${billsec}&#009;direction=${ccnq_direction}&#009;call_direction=${direction}&#009;call_uuid=${uuid}&#009;call_other_uuid=${bridge_uuid}&#009;call_id=${sip_call_id}</template>
    <!-- bridge_uuid aka "Other-Leg-Unique-ID" -- required to map a legs to b legs so that we can trace calls -->
    <!-- We can also rewrite the Call-ID using ${sip_outgoing_call_id} -->
  </templates>
</configuration>
