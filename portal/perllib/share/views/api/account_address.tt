<% USE loc %>
<fieldset>
  <legend><%|loc%>Account Billing Address<%END%></legend>
  <legend><%|loc%>Billing Address<%END%></legend>
  <form method="POST">
  <% FOREACH f IN account_address_format %>
    <% IF f.0 %>
      <p class="ui-helper-clearfix">
      <label for="name" class="left"><% | loc %><% f.0 %><% END %></label>
      <input type="text" name="<% f.0 %>" size="<% f.1 %>" value="<% address.$f | html %>" />
      </p>
    <% END %>
  <% END %>
  <% IF is_admin %>
      <p class="ui-helper-clearfix submit">
        <input type="submit" value="<% | loc %>Save<% END %>" />
      </p>
  <% END %>
  </form>
</fieldset>
